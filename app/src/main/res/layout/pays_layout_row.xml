<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewPaysDrapeau"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/langueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewPaysDrapeau"
        android:layout_alignTop="@+id/imageViewPaysDrapeau"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/imageViewPaysDrapeau"
        android:gravity="center_vertical"
        android:text="Francais"
        android:textColor="@color/black" />


</RelativeLayout>